.portfolio-piece
    position relative
    border-top 1px solid $line-color
    padding-top 1em
    padding-bottom 4em
    &:first-child
        margin-top 0

.portfolio-img
    width 90%
    margin 1.6em auto 0.2em auto
    border 1px solid $line-color
    display block

.img-box-3
    clearfix()
    border 1px solid $line-color
    width 90%
    margin 1.6em auto 0.2em auto
    .portfolio-img
        float left
        width 33.33%
        border none

.img-caption
    position relative
    width 90%
    margin -0.3em auto 1.5em auto
    font-size .8em
    background lighten($line-color,20%)
    padding .5em
