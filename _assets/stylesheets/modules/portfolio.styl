.portfolio-piece
    border-top 1px solid $line-color
    margin-top 4em
    padding-top 1em
    &:first-child
        margin-top 0

.portfolio-img
    width 90%
    margin 1.6em auto 0.2em auto
    border 1px solid $line-color
    display block

.img-box-3
    clearfix()
    border 1px solid $line-color
    width 90%
    margin 1.6em auto 0.2em auto
    .portfolio-img
        float left
        width 33.33%
        border none

.img-carousel
    clearfix()
    width 90%
    margin 1.6em auto 0.2em auto
    position relative

    .portfolio-img
        top 50%
        left 50%
        margin 0
        position absolute
        border none
        display none
        &:first-child
            display block

    &:hover
        .img-carousel-button
            display block



.img-carousel-button
        display none
        $carousel-button-size=1.5em
        z-index 999
        position absolute
        width $carousel-button-size
        height $carousel-button-size
        margin-top -1.5em
        top 50%
        border-radius $carousel-button-size

        text-align center
        font-size 2em
        line-height $carousel-button-size
        background-color $line-color
        cursor pointer
        opacity .5

        &:hover
            opacity .9

.img-carousel-button-prev
    left 0px
    content '>'

.img-carousel-button-next
    right 0px
    content '<'


.img-caption
    position relative
    width 90%
    margin -0.3em auto 1.5em auto
    font-size .8em
    background lighten($line-color,20%)
    padding .5em

    &:after
        $triangle-size=1em solid transparent
        box-sizing content-box
        position absolute
        top -1em
        left 0
        background lighten($line-color,20%)
        content ''
        width 0
        height 0
        border-left $triangle-size solid transparent
        border-right $triangle-size solid transparent
        border-bottom $triangle-size solid lighten($line-color,20%)
