.sidebar-list-item
    v-spacing(1.5em)

.sidebar-sub-list
    margin-left 1em

.sidebar-sub-list-item
    line-height 1.1em
    margin-top .5em

.portfolio-piece
    position relative
    border-top 1px solid $line-color
    padding-top 1em
    padding-bottom 4em
    &:first-child
        margin-top 0

.portfolio-img
    width 90%
    margin 1.6em auto 0.2em auto
    border 1px solid $line-color
    display block

.img-box-3
    clearfix()
    border 1px solid $line-color
    width 90%
    margin 1.6em auto 0.2em auto
    .portfolio-img
        float left
        width 33.33%
        border none

.img-caption
    position relative
    width 90%
    margin -0.3em auto 1.5em auto
    font-size .8em
    background lighten($line-color,20%)
    padding .5em

.img-carousel
    clearfix()
    width 90%
    margin 1.6em auto 0.2em auto
    position relative
    text-align center

    .portfolio-img
        border none
        display none

        &:first-child
            display block

    &:hover
        .img-carousel-button
            display block

.img-carousel-button
        display none
        $carousel-button-size=1.5em
        z-index 900
        position absolute
        width $carousel-button-size
        height $carousel-button-size
        margin-top -1.5em
        top 50%
        border-radius $carousel-button-size

        text-align center
        font-size 2em
        line-height $carousel-button-size
        background-color $line-color
        cursor pointer
        opacity .5

        &:hover
            opacity .9

.img-carousel-button-prev
    left 0px
    content '>'

.img-carousel-button-next
    right 0px
    content '<'
