$logo-size= 50px

.header-wrapper
    position absolute
    top 0
    width 100%
    z-index 999
    //background-color:rgba(255,255,255,.5);
    padding-top 20px
    padding-bottom 20px
    &.fixed
        position fixed

.header-name
    line-height $logo-size
    float left
    margin-right 20px

    &:after
        opacity .2
        float right
        line-height $logo-size
        content '>'
        margin 0 20px 0 20px

/* top navigation */
nav
    float left
    overflow hidden

$nav-indicator-size= 3px
/*.nav-list
    -webkit-transform translate3d(-400px,0,0)
