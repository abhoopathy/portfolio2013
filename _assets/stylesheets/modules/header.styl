.nav-list-item
    //padding 5px
    line-height $logo-size
    position relative
    h-spacing(20px)
    //border-top $nav-indicator-size solid transparent

    &.active
        display: block
        //border-top $nav-indicator-size solid $nav-indicator-color
        a
            color $nav-indicator-color


