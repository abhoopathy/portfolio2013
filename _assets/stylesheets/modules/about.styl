$circle-diameter= 350px
$circle-padding= ($circle-diameter - ($circle-diameter/1.414)) / 2 + 10px
$circle-overlap= 30px
$callout-padding=100px

.callout-image
    background-image url('images/callout_bg.jpg')
    //background-image url('images/callout_bg_blur.jpg')
    background-position center top
    padding $callout-padding 0 $callout-padding 0
    background-size cover

.circle
    position absolute
    width $circle-diameter
    height $circle-diameter
    border-radius $circle-diameter
    background-color:rgba(0,0,0,0.7);
    color white

    h1
        line-height 1em
        margin-top $circle-padding
        padding 0 ($circle-padding)
        text-align center
        font-size 1.9em

    p
        padding 0 ($circle-padding)
        margin-top -.75em
        text-align center
        font-size 1em
        line-height 1.2em

.circle2
    left ($circle-diameter - $circle-overlap)

.circle-container
    $circle-container-width= (2*$circle-diameter - $circle-overlap)
    position relative
    width $circle-container-width
    height $circle-diameter
    margin 0 auto
